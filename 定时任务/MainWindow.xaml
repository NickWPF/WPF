<Window x:Class="定时任务.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:定时任务"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Closed="MainWindow_OnClosed"
        Closing="MainWindow_OnClosing"
        WindowStartupLocation="CenterScreen"
        Title="定时提醒工具" Height="200" Width="303">
    <Grid>
        <ComboBox Name="ComboBoxTime" HorizontalAlignment="Left" 
                  SelectionChanged="ComboBoxTime_OnSelectionChanged"
                  Margin="17,0,0,82" VerticalAlignment="Bottom" Width="270"/>
        <Button Content="设置为开启自启" HorizontalAlignment="Left" Margin="194,135,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click_1" RenderTransformOrigin="-0.118,0.474"/>
        <Button Content="关闭软件" HorizontalAlignment="Left" Margin="17,135,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Label Content="点击关闭即可最小化 ↑" HorizontalAlignment="Left" Margin="164,10,0,0" VerticalAlignment="Top" Width="133"/>
        <Label Content="下次提醒： " HorizontalAlignment="Left" Margin="17,38,0,0" VerticalAlignment="Top"/>
        <Label Name="TipLable" Content="00:00" HorizontalAlignment="Left" Margin="84,38,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
